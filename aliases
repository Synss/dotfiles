# vim: syn=zsh

alias -g D='| dot -Tpdf'
alias -g G='| grep'
alias -g H='| head'
alias -g L='| less'
alias -g N='&> /dev/null'
alias -g P='| open -fa Preview'
alias -g T='| tail'

if [ -x "$(which xdg-open)" ]; then
	alias open="xdg-open"
else
	[ -x "$(which gnome-open)" ] &&
	alias open="gnome-open"
fi

function s { [ $# = 0 ] && sudo -s || sudo "$@" }
