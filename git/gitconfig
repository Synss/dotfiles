[pull]
	rebase = true
[alias]
	branch-name = rev-parse --abbrev-ref HEAD
	au = add -u
	ap = add -p
	co = checkout
	ci = commit
	amend = commit --amend
	cane = commit --amend --no-edit
	fixup = commit --fixup
	ri = rebase -i
	unstage = reset HEAD --
	retop = "!git pull origin ${1:-master}:${1:-master}"
	names = diff --name-only
[commit]
	verbose = true
[push]
	default = upstream
[user]
	name = Mathias Laurin
	email = Mathias.Laurin+github.com@gmail.com
[rebase]
	autosquash = true
